<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="5"
        android:hint="숫자1입력" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="5"
        android:hint="숫자2입력" />

    <Button
        android:id="@+id/buttonNum0"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="1"
        android:text="0" />

    <Button
        android:id="@+id/buttonNum1"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="1"
        android:text="1" />

    <Button
        android:id="@+id/buttonNum2"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="1"
        android:text="2" />

    <Button
        android:id="@+id/buttonNum3"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="1"
        android:text="3" />

    <Button
        android:id="@+id/buttonNum4"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="1"
        android:text="4" />

    <Button
        android:id="@+id/buttonNum5"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="1"
        android:text="5" />

    <Button
        android:id="@+id/buttonNum6"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="1"
        android:text="6" />

    <Button
        android:id="@+id/buttonNum7"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="1"
        android:text="7" />

    <Button
        android:id="@+id/buttonNum8"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="1"
        android:text="8" />

    <Button
        android:id="@+id/buttonNum9"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="1"
        android:text="9" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="5"
        android:text="더하기" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="5"
        android:text="빼기" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="5"
        android:text="곱하기" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="5"
        android:text="나누기" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결과"
        android:textColor="#f00"
        android:layout_columnSpan="5"
        android:textSize="20dp" />
</GridLayout>